{{ 'section-Plan-Picker.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="/path/to/flickity.css" media="screen">
{%- style -%}
           .section-{{ section.id }}-padding {
             padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
             padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
           }

           @media screen and (min-width: 750px) {
             .section-{{ section.id }}-padding {
               padding-top: {{ section.settings.padding_top }}px;
               padding-bottom: {{ section.settings.padding_bottom }}px;
             }
           }
           .color-{{ section.id }}-heading {
             color: {{ section.settings.heading_color }} ;
           }
           .background-{{ section.id }}-image {
             background-image: {{ section.settings.background-image }} ;
           }
     @media screen and (max-width: 749px) {
       .content__grid input[type="radio"]#radio-slider-{{ block.id }}:checked~label[for="radio-slider-{{ block.id }}"] {
    margin-left: 145px;
    display: block;
  }

   }
{%- endstyle -%}
<div class="Plan-Picker  color-{{ section.settings.color_scheme }}">
  <div class="Plan-Picker-container  content-container page-width  section-{{ section.id }}-padding">
    <div class="Plan-Picker__content grid ">
      <div class="content-logo-top  ">
        <div
          class="media-logo-top media "
          style=" max-width: {{ section.settings.image.width }}px padding-bottom: {{ 1 | divided_by: section.settings.logo-top.aspect_ratio | times: 100 }}%;"
        >
          {%- if block.settings['logo-top'] != blank -%}
            {%- capture sizes -%}
                (min-width: 1400px) 100vw, (min-width: 750px) 100vw, calc((100vw - 30px) / 2)
            {%- endcapture -%}
            {{
              section.settings['logo-top']
              | image_url: width: 1500
              | image_tag: loading: 'lazy', sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
            }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
      </div>
      <div class="content__Subheading rte ">
        {{ section.settings.Subheading | replace: 'p>', 'span>' }}
      </div>

      <div class="content__Heading title h0 color-{{ section.id }}-heading ">
        {{ section.settings.heading }}
      </div>

      <div class="content__Description rte">
        {{ section.settings.Description }}
      </div>
      <div
        class="content__grid  main-carousel   "
        data-flickity='
          { "freeScroll": true , "initialIndex": 1 ,  prevNextButtons: false ,
          }
        '
      >
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'card-block' -%}
              <div
                class="card-block_item carousel-cell  color-{{ section.id }}-heading "
              >
                {%- if block.settings['Most-Popular_checkbox'] == true -%}
                  <div class="card-block_item__Most Popular rte">Most Popular</div>
                {%- endif -%}

                <h2 class="card-block__Title rte">
                  {{ block.settings.Title }}
                </h2>
                <div class="card-block__Price_text rte">
                  {{ block.settings.Price_text }}
                </div>
                <div
                  class="card-block_image media "
                  style=" max-width: {{ section.settings.image.width }}px padding-bottom: {{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;"
                >
                  {%- if block.settings.image != blank -%}
                    {%- capture sizes -%}
                          (min-width: 1400px) 100vw, (min-width: 750px) 100vw, calc((100vw - 30px) / 2)
                      {%- endcapture -%}
                    {{
                      block.settings.image
                      | image_url: width: 1500
                      | image_tag: loading: 'lazy', sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
                    }}
                  {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                </div>
                <div class="card-block__USP-list ">
                  <div class="card-block__USP-list-svg ">
                    <svg width="26" height="26" viewBox="0 0 26 26" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <g clip-path="url(#clip0_1_200)">
                      <path d="M13 25.9998C20.1797 25.9998 26 20.1795 26 12.9998C26 5.82005 20.1797 -0.000244141 13 -0.000244141C5.8203 -0.000244141 0 5.82005 0 12.9998C0 20.1795 5.8203 25.9998 13 25.9998Z" fill="#620336"/>
                      <path d="M7.28442 14.3332L11.0939 17.619L18.713 8.38086" stroke="#FFF5DD" stroke-width="2.38095" stroke-miterlimit="10"/>
                      </g>
                      <defs>
                      <clipPath id="clip0_1_200">
                      <rect width="26" height="26" fill="white" transform="translate(0 -0.000244141)"/>
                      </clipPath>
                      </defs>
                    </svg>
                  </div>
                  <div class="card-block__USP-list-text rte">
                    {{ block.settings['USP-list-text'] }}
                  </div>
                </div>
                <div class="card-block__Button ">
                  <div class="card-block__Button_Get-started ">
                    {{ block.settings['Get-started'] }}
                  </div>
                  <div class="card-block__Button-svg ">
                    <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <g clip-path="url(#clip0_18_32)">
                      <path d="M9.0062 18.0122C13.9802 18.0122 18.0124 13.9799 18.0124 9.00596C18.0124 4.03197 13.9802 -0.000244141 9.0062 -0.000244141C4.03221 -0.000244141 0 4.03197 0 9.00596C0 13.9799 4.03221 18.0122 9.0062 18.0122Z" fill="#235C55"/>
                      <path d="M7.57965 13.5959L6.2771 12.2685L9.72576 8.86948L6.30191 5.75577L7.55484 4.37878L12.4301 8.81986L7.57965 13.5959Z" fill="#BDEC70"/>
                      </g>
                      <defs>
                      <clipPath id="clip0_18_32">
                      <rect width="18" height="18" fill="white" transform="translate(0 -0.000244141)"/>
                      </clipPath>
                      </defs>
                    </svg>
                  </div>
                </div>
                <div class="card-block__Footer-Note ">
                  {{ block.settings['Footer-Note'] }}
                  <svg width="11" height="11" viewBox="0 0 11 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <g clip-path="url(#clip0_1_244)">
                    <path d="M5.46 10.9198C8.47548 10.9198 10.92 8.47523 10.92 5.45976C10.92 2.44428 8.47548 -0.000244141 5.46 -0.000244141C2.44453 -0.000244141 0 2.44428 0 5.45976C0 8.47523 2.44453 10.9198 5.46 10.9198Z" fill="#620336"/>
                    <path d="M5.45009 2.59973C5.80009 2.59973 6.07009 2.84973 6.07009 3.17973C6.07009 3.50973 5.80009 3.75973 5.45009 3.75973C5.10009 3.75973 4.84009 3.48973 4.84009 3.17973C4.84009 2.86973 5.10009 2.59973 5.45009 2.59973ZM4.98009 4.47973H5.94009V8.31973H4.98009V4.47973Z" fill="#FFF5DD"/>
                    </g>
                    <defs>
                    <clipPath id="clip0_1_244">
                    <rect width="10.92" height="10.92" fill="white" transform="translate(0 -0.000244141)"/>
                    </clipPath>
                    </defs>
                  </svg>
                </div>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
      <div class="Plan-Picker__bottom ">
        <div
          class="Plan-Picker__icon-bottom  media"
          style=" max-width: {{ section.settings.image.width }}px; padding-bottom: {{ 1 | divided_by: section.settings['icon-bottom'].aspect_ratio | times: 100 }}%;"
        >
          {%- if section.settings['icon-bottom'] != blank -%}
            {%- capture sizes -%}
                (min-width: 1400px) 100vw, (min-width: 750px) 100vw, calc((100vw - 30px) / 2)
            {%- endcapture -%}
            {{
              section.settings['icon-bottom']
              | image_url: width: 1500
              | image_tag: loading: 'lazy', sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
            }}
          {%- endif -%}
        </div>
        <div class="Plan-Picker__background-bottom media background-{{ section.id }}-image"></div>
      </div>
    </div>
  </div>
  <script src="/path/to/flickity.pkgd.min.js"></script>
</div>
